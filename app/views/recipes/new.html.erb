<section class="container">
    <h1>Add Recipe</h1>
    <%= form_with model: recipe, method: :post, url: recipes_path, local: true, scope: :recipe do |form| %> 
        <div class="form-group mb-3">
            <%= form.label :name %>
            <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
            <%= form.label :preparation_time %>
            <%= form.text_field :preparation_time, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
            <%= form.label :cooking_time %>
            <%= form.text_field :cooking_time, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
            <%= form.label :description %>
            <%= form.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :question, "Do you want this recipe to be public?" %>
          <%= form.radio_button :public, true %>
          <%= form.label :public, "Yes" %>
          <%= form.radio_button :public, false %>
          <%= form.label :age_adult, "No" %>
        </div>
        
        <% if flash.now[:alert] %>
            <p class="alert"><%= flash[:alert] %></p>
        <% end %>
        <%= form.submit "Submit", class: "btn btn-primary" %>
    <% end %>
</section>