<div class="container col-6">
    <h1>Add Food</h1>
    <%= form_with model: food, method: :post, url: foods_path, local: true, scope: :new_food do |form| %> 
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= form.label :measurement_unit %>
            <%= form.text_field :measurement_unit, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= form.label :price %>
            <%= form.text_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= form.label :quantity %>
            <%= form.text_field :quantity, class: "form-control" %>
        </div>
        <% if flash.now[:alert] %>
            <p class="alert"><%= flash[:alert] %></p>
        <% end %>
        <%= form.submit "Submit", class: "btn btn-primary" %>
    <% end %>
</div>